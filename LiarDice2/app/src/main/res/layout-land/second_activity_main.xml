<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/checkBluffButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/checkBtn"
        app:layout_constraintEnd_toEndOf="@+id/newBidButton"
        app:layout_constraintStart_toStartOf="@+id/newBidButton"
        app:layout_constraintTop_toBottomOf="@+id/newBidButton" />

    <Button
        android:id="@+id/newBidButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/newBidBtn"
        app:layout_constraintEnd_toEndOf="@+id/callBluffButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/callBluffButton"
        app:layout_constraintTop_toBottomOf="@+id/callBluffButton" />

    <TextView
        android:id="@+id/compBluffTextView"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="@string/computerBluff"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compBidTextView" />

    <TextView
        android:id="@+id/compBidTextView"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/computerBid"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/callBluffButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:text="@string/callBluffBtn"
        app:layout_constraintStart_toEndOf="@+id/compBidTextView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>